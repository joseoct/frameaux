generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  name     String
  email    String @unique
  password String
  role_id  String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  role Role @relation(fields: [role_id], references: [id])

  UserTecnology UserTecnology[]

  @@map("users")
}

model Role {
  id   String @id @default(uuid())
  name String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  users User[]
  UserTecnology UserTecnology[]

  @@map("roles")
}

model Tecnology {
  id String @id @default(uuid())

  name            String @unique
  tecnology_image String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  UserTecnology UserTecnology[]

  @@map("tecnologies")
}

model UserTecnology {
  id String @id @default(uuid())

  user_id       String
  tecnology_id  String
  current_layer Int? 
  role_id       String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user      User      @relation(fields: [user_id], references: [id])
  tecnology Tecnology @relation(fields: [tecnology_id], references: [id])

  role      Role @relation(fields: [role_id], references: [id])

  @@map("users_tecnologies")
}
